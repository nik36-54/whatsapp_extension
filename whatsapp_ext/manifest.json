{
    "manifest_version": 3,
    "name": "WhatsApp Sender",
    "version": "1.0",
    "description": "Send automated WhatsApp messages directly from your browser.",
    "permissions": ["scripting", "activeTab", "storage"],
    "host_permissions": ["https://web.whatsapp.com/*"],  
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
      }
    },
    "background": {
      "service_worker": "background.js"
    }
  }
  